form{
    width: 95%;
    padding-top: 2.5%;
    padding-bottom: 2.5%;
    margin: auto;
}

form h3{
    color: #009879;
    margin-top: 20px;
    margin-bottom: 10px;
    font-size: 20px;
}

input.ng-touched.ng-pristine.ng-invalid, input.ng-touched.ng-dirty.ng-invalid{ border: 1px solid #D53032;}

.warningText{
    color: #D53032;
    padding-bottom: 3px;
    font-size: 14px;
    margin-left: 5px;
}

.add{
    color: #009879;
    cursor: pointer;
}

h1{
    color:  #009879;
    text-align: center;
    padding-top: 20px;
}

.ng-select:not(.ng-has-value) + label {
    color: var(--vz-body-color) !important;
    left: 15px !important;
    top: -13px !important;
    font-size: 11px;
}
