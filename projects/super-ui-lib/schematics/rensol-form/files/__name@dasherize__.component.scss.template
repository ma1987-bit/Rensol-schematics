.ng-select.ng-select-focused:not(.ng-select-open) + label{
    z-index: 1001;
    color: var(--vz-body-color) !important;
    position: absolute !important;
    left: 15px !important;
    padding: 2px;
    top: -13px !important;
    background-color: white;
    font-size: 11px;
    height: auto;
    width: auto;
}

.form-label {
    height: 35px;
    padding-bottom: 0px !important;
    padding-top: 0px !important;
    margin: 0;
}

.opacity {
    opacity: 1 !important;
}

label {
    position: absolute;
    left: 15px;
    padding: 2px;
    top: -5px;
    height: auto;
    background-color: white;
    width: auto;
    opacity: 1;
    color: var(--vz-body-color);
    transition: 0.2s ease all;
    -moz-transition: 0.2s ease all;
    -webkit-transition: 0.2s ease all;
}

.extraPadding{
    left: 27px !important;
}

input:focus~label {
    padding: 2px !important;
    top: -5px !important;
}

input:valid~label {
    padding-top: 1px;
    background-color: white !important;
    color: var(--vz-body-color);
}

input:placeholder-shown~label {
    padding-top: 1px;
    background-color: white !important;
    color: var(--vz-body-color);
    top: 6px;
}
